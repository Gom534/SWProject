<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Top Stroke -->
            <item>
                <shape>
                    <solid android:color="#495057" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item android:top="0dp" android:bottom="2dp">
                <shape>
                    <gradient
                        android:startColor="#495057"
                        android:endColor="#495057"
                        android:angle="270" />
                    <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- pressed -->

    <item android:state_focused="true">
        <layer-list>
            <!-- Top Stroke -->
            <item>
                <shape>
                    <solid android:color="#14B61A" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
            <item android:top="0dp" android:bottom="2dp">
                <shape>
                    <gradient
                        android:startColor="#14B61A"
                        android:endColor="#14B61A"
                        android:angle="270" />
                    <corners android:topLeftRadius="2dp" android:topRightRadius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- focused -->

    <item>
        <layer-list>
            <!-- Top Stroke -->
            <item>
                <shape>
                    <solid android:color="#ffffff" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item android:top="0dp" android:bottom="5dp">
                <shape>
                    <gradient
                        android:startColor="#ffffff"
                        android:endColor="#ffffff"
                        android:angle="90" />
                    <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- default -->
</selector>
